---
layout: layouts/base.njk
---

{%- css %}{% include "public/css/post.css" %}{%- endcss %}
{# Only include the syntax highlighter CSS on blog posts, included with the CSS per-page bundle #}
{%- css %}{% include "node_modules/prismjs/themes/prism-okaidia.css" %}{% endcss %}
{%- css %}{% include "public/css/prism-diff.css" %}{%- endcss %}
<h1 class="post-title">{{ title }}</h1>
<div class="post-description">{{ description }}</div>
<div class="post-metadata">
    <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
    <div class="post-taglist">
        {%- for tag in tags | filterTagList %}
            {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
            <a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>
            {%- if not loop.last %},
            {% endif %}
        {%- endfor %}
    </div>
</div>
<div class="post-content">
    {{ content | safe }}
</div>
{%- if collections.posts %}
    {%- set previousPost = collections.posts | getPreviousCollectionItem %}
    {%- set nextPost = collections.posts | getNextCollectionItem %}
    {%- if nextPost or previousPost %}
        <ul class="links-nextprev">
            {%- if previousPost %}
                <li class="links-nextprev-prev">← Previous<br>
                        <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
                        {{ previousPost.data.description }}</li>
                {% endif %}
                {%- if nextPost %}
                    <li class="links-nextprev-next">Next →<br>
                            <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a><br/>{{ nextPost.data.description }}</li>
                    {% endif %}
                </ul>
            {%- endif %}
        {%- endif %}